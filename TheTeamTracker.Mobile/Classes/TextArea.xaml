<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheTeamTracker.Mobile.Classes.TextArea">
  <ContentView.Content>
		<StackLayout Padding="1" BackgroundColor="LightGray" x:Name="stackEditor">
			<Editor x:Name="editor" Text="{Binding Text}" FontSize="Small" BackgroundColor="White" />
		</StackLayout>
	</ContentView.Content>
</ContentView>